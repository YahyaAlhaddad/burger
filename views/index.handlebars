<div class="container" >
  <div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
      <img src="./assets/img/cheesburger.png" alt="burger" height="150" width="150" class="center">
      <h2>Eat Da Burger!</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-5">
      <ul>
        {{#each burgers}}
           {{#unless devoured}}
           
          <li>
            <div class="row">
           <div class="col-sm-6">
            <p><span class="label">ID.</span> {{this.id}}</p>
            <p><span class="label"></span> {{this.burger_name}}</p>
            </div>
            <div class="col-sm-6">

            <button data-id="{{this.id}}" class="devour">Devour it!</button>
            </div>
            </div>
          </li>    
          {{/unless}} 
        {{/each}}
      </ul>
    </div>
  
  <div class="col-sm-5">
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          <li>
        
            <p><span class="label">ID.</span> {{this.id}}</p>
            <p><span class="label"></span> {{this.burger_name}}</p>

          </li>    
        {{/if}} 
      {{/each}}
    </ul>
  </div>
  {{!-- </div> --}}
  </div>
    <div class="row">
      <div class="col-sm-1"></div>
      <div class="col-sm-5">
        <form class="add-burger">

          <div class="form-group">
            <label for="burger">Enter a Burger you want to eat and click the submit button</label>
            <input type="text" id="newBurger" name="name">
          </div>

          <button type="submit" id="add">Submit</button>
        </form>
      </div>
    </div>
</div>